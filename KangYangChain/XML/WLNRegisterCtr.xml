        <FlexTouchView onPress="hideAction:" layout="height:40,width:40,justifyContent:center,alignItems:center" attr="underlayColor:darkGray">

            <UIImageView attr="source:display" layout="height:10,width:15"/>

        </FlexTouchView>

    </UIView>

