<?xml version="1.0" encoding="UTF-8"?>

<UIView layout="flex:1" attr="@:css/colors">

   <UIView layout="margin:10,marginTop:0" attr="bgColor:white,borderRadius:7,@:css/shadows">

       <UIView layout="flexDirection:row,margin:15" attr="">

           <UIImageView name="headImg" attr="source:,borderRadius:15,clipsToBounds:true" layout="width:30,height:30" />

           <UIView layout="marginLeft:10" attr="">

                <UILabel name="nameLab" layout="" attr="fontSize:14,color:#333333,linesNum:0,text:"/>
               <UILabel name="remarkLab" layout="" attr="fontSize:12,color:#D0D0D0,linesNum:0,text:"/>

           </UIView>

       </UIView>

        <UIView layout="flexDirection:row" attr="">
            <UIView layout="alignItems:flex-start,flex:1,marginLeft:10,marginRight:10,height:100" attr="@:css/colors">

                <UILabel name="contentLab" layout="margin:10" attr="fontSize:14,color:#333333,linesNum:0,@:css/colors"/>
            </UIView>
            <UIImageView name="contentImg" attr="source:" layout="@:css/contentImg,marginRight:10" />

        </UIView>
     
        <UILabel name="ofLab" layout="marginLeft:10,marginTop:10" attr="font:12,color:blue,linesNum:0"/>


        <UIView layout="flexDirection:row,justifyContent:space-between,margin:10" attr="">

             <UILabel name="lookLab" layout="" attr="fontSize:12,color:#333333,linesNum:0,text:"/>


            <UIView layout="flexDirection:row" attr="">

                <FlexTouchView onPress="" layout="marginRight:5,flexDirection:row" attr="underlayColor:darkGray">
                    <UIImageView attr="source:exceptional" layout="marginRight:5"/>
                    <UILabel name="leftLab" layout="" attr="fontSize:12,color:#D0D0D0,linesNum:0,text:"/>
                </FlexTouchView>

                <FlexTouchView onPress="" layout="marginRight:5,flexDirection:row" attr="underlayColor:darkGray">
                
                    <UIImageView attr="source:givealike" layout="marginRight:5"/>
                    <UILabel name="centerLab" layout="" attr="fontSize:12,color:#D0D0D0,linesNum:0,text:"/>
                </FlexTouchView>

                <FlexTouchView onPress="" layout="marginRight:5,flexDirection:row" attr="underlayColor:darkGray">
                    <UIImageView attr="source:comment" layout="marginRight:5"/>
                    <UILabel name="rightLab" layout="" attr="fontSize:12,color:#D0D0D0,linesNum:0,text:"/>

                </FlexTouchView>


             
            </UIView>

        </UIView>

        

   </UIView>

</UIView>
